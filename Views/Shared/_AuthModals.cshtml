@using praca_dyplomowa_zesp.Models

<div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 550px;">
        <div class="modal-content modal-neon">
            <div class="modal-header border-bottom-0 pb-0">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 p-sm-4 pt-0">

                <h2 class="text-neon-title mb-3">Logowanie</h2>

                <form asp-controller="Account" asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" class="current-url-input" />

                    <div class="form-floating mb-2">
                        <input name="Login" type="text" class="form-control form-control-tech" placeholder="Login" required />
                        <label>Login</label>
                    </div>

                    <div class="form-floating mb-2">
                        <input name="Password" type="password" class="form-control form-control-tech" placeholder="Hasło" required />
                        <label>Hasło</label>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" name="RememberMe" value="true" id="loginRememberMe" />
                        <label class="form-check-label text-muted small pt-1" for="loginRememberMe">
                            Zapamiętaj mnie
                        </label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-neon-green btn-lg">
                            Zaloguj się
                        </button>
                    </div>
                </form>

                <div class="auth-separator my-2">LUB</div>

                <form asp-controller="Account" asp-action="LoginWithSteam" method="post" class="d-flex justify-content-center mb-2">
                    <input type="hidden" name="returnUrl" class="current-url-input" />
                    <button type="submit" class="btn p-0 border-0 bg-transparent shadow-none">
                        <img src="~/uploads/steam/sits_01.png" alt="Zaloguj przez Steam" class="img-fluid" style="max-height: 40px;" />
                    </button>
                </form>

                <div class="text-center mb-2">
                    <p class="text-muted" style="font-size: 0.65rem; line-height: 1.1; opacity: 0.7;">
                        This site is not associated with Valve Corporation.
                    </p>
                </div>

                <div class="text-center mt-2">
                    <p class="text-muted small mb-1">Brak konta?</p>
                    <a href="#" onclick="switchToRegister()" class="btn btn-low-tier fw-bold py-1" style="color: #fff;">
                        ZAREJESTRUJ SIĘ TERAZ
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="registerModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" style="max-width: 550px;">
        <div class="modal-content modal-neon">
            <div class="modal-header border-bottom-0 pb-0">
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4 p-sm-4 pt-0">

                <h2 class="text-neon-title mb-3">Rejestracja</h2>

                <form asp-controller="Account" asp-action="Register" method="post">
                    <input type="hidden" name="returnUrl" class="current-url-input" />

                    <div class="form-floating mb-2">
                        <input name="Login" type="text" class="form-control form-control-tech" placeholder="Login" required />
                        <label>Login (ID)</label>
                    </div>

                    <div class="form-floating mb-2">
                        <input name="UserName" type="text" class="form-control form-control-tech" placeholder="Nick" required />
                        <label>Nazwa gracza</label>
                    </div>

                    <div class="form-floating mb-2">
                        <input name="Password" type="password" class="form-control form-control-tech" placeholder="Hasło" required />
                        <label>Hasło</label>
                    </div>

                    <div class="form-floating mb-3">
                        <input name="ConfirmPassword" type="password" class="form-control form-control-tech" placeholder="Powtórz hasło" required />
                        <label>Powtórz hasło</label>
                    </div>

                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-neon-green btn-lg">
                            Stwórz konto
                        </button>
                    </div>

                    <div class="text-center mt-2">
                        <p class="text-muted small mb-1">Masz już ID?</p>
                        <a href="#" onclick="switchToLogin()" class="btn btn-low-tier fw-bold py-1" style="color: #fff;">
                            ZALOGUJ SIĘ TUTAJ
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function openAuthModal(modalType) {
        var loginModalEl = document.getElementById('loginModal');
        var registerModalEl = document.getElementById('registerModal');

        var loginInstance = bootstrap.Modal.getInstance(loginModalEl);
        var registerInstance = bootstrap.Modal.getInstance(registerModalEl);

        if (modalType === 'login') {
            if (registerInstance && registerModalEl.classList.contains('show')) {
                registerInstance.hide();
                setTimeout(function() {
                    new bootstrap.Modal(loginModalEl).show();
                }, 300);
            } else {
                if (!loginInstance || !loginModalEl.classList.contains('show')) {
                    new bootstrap.Modal(loginModalEl).show();
                }
            }
        }
        else if (modalType === 'register') {
            if (loginInstance && loginModalEl.classList.contains('show')) {
                loginInstance.hide();
                setTimeout(function() {
                    new bootstrap.Modal(registerModalEl).show();
                }, 300);
            } else {
                if (!registerInstance || !registerModalEl.classList.contains('show')) {
                    new bootstrap.Modal(registerModalEl).show();
                }
            }
        }
    }

    function switchToRegister() { openAuthModal('register'); }
    function switchToLogin() { openAuthModal('login'); }

    document.addEventListener("DOMContentLoaded", function() {
        var currentUrl = window.location.pathname + window.location.search;
        var inputs = document.querySelectorAll('.current-url-input');
        inputs.forEach(function(input) { input.value = currentUrl; });
    });
</script>